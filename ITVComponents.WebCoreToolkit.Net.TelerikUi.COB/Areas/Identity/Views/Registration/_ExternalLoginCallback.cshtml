@using Microsoft.Extensions.Localization
@using ITVComponents.WebCoreToolkit.Extensions
@using ITVComponents.WebCoreToolkit.Localization.Model
@using ITVComponents.WebCoreToolkit.Net.TelerikUi.COB.Areas.Identity
@using ITVComponents.WebCoreToolkit.Net.TelerikUi.Options
@using Kendo.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.Extensions.Options
@model ITVComponents.WebCoreToolkit.Net.TelerikUi.COB.Areas.Identity.DTO.ExternalUserInputModel
@inject IStringLocalizer<IdentityMessages> localizer
@inject IOptions<ViewOptions> viewOptions
@{
    Layout = viewOptions.Value.LayoutPage;
    ViewData["Title"] = localizer["Register"];
    var textModel = localizer.FromJson<PrePostValLocalizationBlock>("ExternalLoginInfo", ViewData["providerDisplayName"]);
}

<h1>@ViewData["Title"]</h1>
<h4 id="external-login-title">@textModel.Title</h4>
<hr />

<p id="external-login-description" class="text-info">
    @textModel.Pre<strong>@textModel.TagTx</strong>@textModel.Post
    
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateExternalUser" asp-controller="Registration" asp-area="Identity" asp-route-returnUrl="@ViewData["returnUrl"]" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@localizer["Register-Save"]</button>
        </form>
    </div>
</div>
