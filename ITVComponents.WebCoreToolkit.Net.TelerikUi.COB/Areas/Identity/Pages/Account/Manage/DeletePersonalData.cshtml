@page
@using Microsoft.Extensions.Localization
@using ITVComponents.WebCoreToolkit.Net.TelerikUi.COB.Areas.Identity.Pages.Account.Manage
@using ITVComponents.WebCoreToolkit.Net.TelerikUi.COB.Areas.Identity
@model ITVComponents.WebCoreToolkit.Net.TelerikUi.COB.Areas.Identity.Pages.Account.Manage.DeletePersonalDataModel
@inject IStringLocalizer<IdentityMessages> localizer
@{
    ViewData["Title"] = localizer["Delete Personal Data"];
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@{
    Layout = "_Layout.cshtml";
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>@localizer["Deleting this data will permanently remove your account, and this cannot be recovered."]</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">@localizer["Delete data and close my account"]</button>
    </form>
</div>
