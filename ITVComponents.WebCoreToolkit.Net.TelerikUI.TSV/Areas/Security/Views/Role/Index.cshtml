    @await Component.InvokeAsync(typeof(ShowTable), new { customViewData = new Dictionary<string, object> { { "tenantId", Model }, { "permissionId", null }, { "userId", null } } })
</div>

@Html.DetailViewScript("RoleDetails","RasDummy#=RoleId#",$"~/Security/Role/RoleDetails?roleId=#=RoleId#&tenantId={Model}",false)
